
<% content_for :guide do %>
  <div class="block-table">
    <div class="block-table-cell">
      <div class="register-container">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><%= (t 'password.find_password') %></h3>
          </div>
          <div class="panel-body has-error has-feedback">
            <div class="find-password">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <div class="form-group ">
                <%= f.label :email, for:'inputEmail' %>
                <%= f.email_field :email, value: @email, autofocus: true, id:'inputEmail', autocomplete: 'email', class: 'form-control', placeholder: (t 'session.email_placeholder'), required: true %>
            </div>
            <% if @otp_enabled %>
              <div class="form-group">
                <%= label_tag :otp, (t 'password.google_code') %>
                <%= text_field_tag :otp, '', autocomplete: 'off', class: 'form-control text-center', required: true, maxlength: 6, size: 6, pattern: '\d{6}', placeholder: '' %>
              </div>
            <% end %>
                <span class="help-block">
                <%- flash.each do |name, msg| -%>
                <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
                <%- end -%>
              </span>
            <div class="form-group mask-form-button">
              <%= f.submit (t 'password.submit') , class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

