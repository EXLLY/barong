
<% content_for :guide do %>
  <div class="mask-fixed">
    <div class="mask-content">
      <div class="register-container">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><%= (t 'password.find_password') %></h3>
          </div>
          <div class="panel-body">
            <div class="find-password">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
             <%= devise_error_messages! %>
            <div class="form-group">
                <%= f.label :email, for:'inputEmail' %>
                <%= f.email_field :email, autofocus: true, id:'inputEmail', autocomplete: 'email', class: 'form-control', placeholder: (t 'session.email_placeholder'), required: true %>
            </div>

            <div class="form-group mask-form-button">
              <%= f.submit (t 'password.submit') , class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

