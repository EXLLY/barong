<% content_for :guide do %>
<div class="mask-fixed">
  <div class="mask-content">
    <div class="register-container">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%=(t 'password.reset_pwd') %></h3>
        </div>
        <div class="panel-body">
          <div class="reset-password">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.hidden_field :reset_password_token %>
              <div class="form-group">
                <%= f.label :password, (t 'password.new_password'), for: 'inputEmail' %><br />
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                <% end %>
                <%= f.password_field :password, autofocus: true, id: 'inputEmail', autocomplete: 'off', class: 'form-control', placeholder:(t 'password.placeholder_new_password'), required: true %>
              </div>
              <div class="form-group has-error has-feedback">
                <%= f.label :password_confirmation, (t 'password.confirm_new_password'), for: 'inputEmail1'%><br />
                <%= f.password_field :password_confirmation, id: 'inputEmail1', autocomplete: 'off', class: 'form-control', placeholder: (t 'password.placeholder_confirm_new_password'), required: true %>
                <% if devise_error_messages! %>
                  <span class="help-block"><%= devise_error_messages!%></span>
                <% end %>
              </div>
              <div class="form-group mask-form-button">
                <%= f.submit 'SUBMIT', class: 'btn btn-primary btn-block' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>