<% content_for :guide_title do %>
  <h3 class="profile-email">
<!--    <i class="fa fa-user"></i><span>Sign in</span>-->
  </h3>
<% end %>

<% content_for :guide do %>
<div class="row justify-content-center">
  <div class="container-fluid box-shadow mx-3">
    <div class="mb-3">
      <h2 class="title font-weight-bold">Sign in</h2>
    </div>
  </div>

  <div class="container-fluid mx-3 px-5 py-4">
    <%= form_for(resource, as: resource_name, url: accounts_sign_in_confirm_path) do |f| %>
      <%= devise_error_messages! %>

      <div id="email-form">
        <div class="form-group">
          <div class="row">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: 'email',
                                      class: 'px-1 form-control form-control-lg underlined',
                                      placeholder: 'Enter email', required: true %>
          </div>
        </div>
        <div>
          <label>complete the verificationï¼š</label>
          <div id="captcha1">
            <p id="wait1" class="show">Loading verification code......</p>
          </div>
        </div>
        <br>
        <div class="row mt-4 d-flex justify-content-between">
          <%= submit_tag 'Submit', class: 'btn btn-success',id: 'log-in'%>
        </div>

      </div>
    <% end %>
  </div>
</div>
<% end %>
