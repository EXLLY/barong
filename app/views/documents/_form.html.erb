<%= form_with(model: document, local: true) do |form| %>
  <% if document.errors.any? %>
    <div id="error_explanation" class="has-error has-feedback">
      <div class="help-block">
        <h2><%= pluralize(document.errors.count, "error") %> <%=(t 'profiles.error_msg') %>:</h2>
        <ul>
          <% document.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :doc_type, (t 'profiles.doc_type') %>
        <%= form.select(:doc_type, Document::TYPES, {id: :document_doc_type}, {class: 'form-control'}) %>
      </div>
      <div class="form-group">
        <%= form.label :doc_expire, (t 'profiles.doc_expire') %>
        <%= form.text_field :doc_expire, id: :document_doc_expire, class: 'datepicker-toggle form-control', 'data-date-format': 'yyyy-mm-dd', 'data-date-start-date': '+1d', placeholder: (t 'profiles.expiry_date'), required: true%>
      </div>
      <div class="form-group">
        <%= form.label :doc_number, (t 'profiles.doc_number') %>
        <%= form.text_field :doc_number, id: :document_doc_number, class: 'form-control', placeholder: (t 'profiles.number'), required: true %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label><%=(t 'profiles.document_upload') %></label>
        <%= form.file_field :upload, id: :document_upload, class: 'dropify file-upload-drag ', 'data-allowed-file-extensions': 'png jpg jpeg pdf', 'data-max-file-size': '10M', 'data-default-file': document.upload.present? ? image_url(document.upload.url) : false, required: true %>
        </br>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label><%=(t 'profiles.photo_upload') %></label>
        <%= form.file_field :photo, id: :document_photo, class: 'dropify file-upload-drag ', 'data-allowed-file-extensions': 'png jpg jpeg pdf', 'data-max-file-size': '10M', 'data-default-file': document.upload.present? ? image_url(document.upload.url) : false, required: true %>
        </br>
      </div>
    </div>
  </div>
  <div class="row profile-kyc-form-btn">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.submit (t 'profiles.submit'), class: 'btn btn-primary btn-block' %>
      </div>
    </div>
    <div class="col-md-3"></div>
  </div>
<% end %>
