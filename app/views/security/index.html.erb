<% content_for :guide do %>
  <div class="container">
    <% if account_signed_in? %>
      <%= render partial: 'layouts/shared/overview'%>
      <div class="row">
        <div class="flex-box horizontal profile-body">
          <div class="profile-sidebar">
            <div class="sidebar-list">
              <%=link_to (t 'profiles.overview'), index_path%>
              <%=link_to (t 'profiles.security'), '' ,class:"current" %>
              <%=link_to (t 'profiles.kyc'), profiles_path(@profile) %>
            </div>
          </div>
          <div class="flex-content">
            <div class="profile-content">
              <div class="profile-security">
                <a href="<%=edit_account_registration_path%>" class="profile-security-password">
                  <div>
                    <strong><%= (t 'password.password') %></strong>
                  </div>
                </a>
                <a href="<%=security_path %>" class="profile-security-google">
                  <div>
                    <strong><%= (t 'profiles.Google_2_Step') %></strong>
                    <span class="disable"><%= (t 'profiles.settings_incomplete') %></span>
                  </div>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
  <% else %>

      <h2>You are not signed in.</h2>
      <br/>
      <%= link_to 'Sign in', new_account_session_path %> or <%= link_to 'Sign up', new_accountl_registration_path %>

    <% end %>
  </div>
<% end %>