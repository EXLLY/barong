<% content_for :guide do %>
  <div class="container">
    <% if account_signed_in? %>
      <%= render partial: 'layouts/shared/overview'%>
      <div class="row">
        <div class="flex-box horizontal profile-body">
          <div class="profile-sidebar">
            <div class="sidebar-list">
              <%=link_to (t 'profiles.overview'), index_path%>
              <%=link_to (t 'profiles.security'), '' ,class:"current" %>
              <%=link_to (t 'profiles.kyc'), profiles_path(@profile) %>
            </div>
          </div>
          <div class="flex-content">
            <div class="profile-content">
              <div class="profile-security">
                <a href="<%=edit_account_registration_path%>" class="profile-security-password selected">
                  <div>
                    <strong><%= (t 'password.password') %></strong>
                  </div>
                </a>
                <% if current_account.otp_enabled %>
                  <a href="<%= security_preUnbind_path %>" class="profile-security-password selected">
                    <div>
                      <strong><%= (t 'profiles.Google_2_Step') %></strong>
                    </div>
                  </a>
                <%else %>
                <a href="<%= security_path %>" class="profile-security-google selected">
                  <div>
                    <strong><%= (t 'profiles.Google_2_Step') %></strong>
                    <span class="disabled"><%= (t 'profiles.settings_incomplete') %></span>
                  </div>
                </a>
                <%end %>
              </div>
            </div>
          </div>
        </div>
      </div>
  <% else %>
      <h2><%= (t 'session.not_signed_in') %></h2>
      <br/>
      <%= link_to (t 'session.login'), new_account_session_path %> or <%= link_to (t 'session.register'), new_account_registration_path %>
    <% end %>
  </div>
<% end %>