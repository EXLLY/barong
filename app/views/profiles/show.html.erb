<% content_for :guide do %>
  <div class="container">
    <% if account_signed_in? %>
      <%= render partial: 'layouts/shared/overview'%>
      <div class="row">
        <div class="flex-box horizontal profile-body">
        <%= render partial: 'layouts/shared/profile_siderbar_list'%>
          <div class="flex-content">
            <div class="profile-content">
              <div class="profile-kyc-tabs">
                <ul class="clearfix">
                  <li ><a href="<%= profiles_path(@profile) %>"><%= (t 'profiles.individual_account') %></a></li>
                  <li class="active"><a href="#"><%= (t 'profiles.insitutional_account') %></a></li>
                </ul>
              </div>
              <div class="profile-kyc-tabContent">
                <div class="profile-insitutional">
                  <p><%= (t 'profiles.contact_us_before') %>
                  <a href="mailto:<%= (t 'profiles.contact_email') %>"><%= (t 'profiles.contact_email')%></a>
                  <%= (t 'profiles.contact_us_after') %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <h2><%= (t 'session.not_signed_in') %></h2>
      <br/>
      <%= link_to (t 'session.login'), new_account_session_path %> or <%= link_to (t 'session.register'), new_account_registration_path %>
    <% end %>
  </div>
<% end %>