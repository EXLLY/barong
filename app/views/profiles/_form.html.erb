<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation" class="has-error has-feedback">
      <div class="help-block">
        <h2><%= pluralize(profile.errors.count, "error") %> <%=(t 'profiles.error_msg') %>:</h2>
        <ul>
        <% profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :first_name, (t 'profiles.first_name') %>
        <%= form.text_field :first_name, id: :profile_first_name, class: "form-control", placeholder: (t 'profiles.first_name'), required: true  %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :last_name , (t 'profiles.last_name') %>
        <%= form.text_field :last_name, id: :profile_last_name, class: "form-control", placeholder: (t 'profiles.last_name'), required: true %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :dob, (t 'profiles.dob')+':' %>
        <%= form.text_field :dob, id: :profile_dob, class: 'datepicker-toggle form-control', 'data-date-format': 'yyyy-mm-dd', 'data-date-end-date': '-1d', placeholder: (t 'profiles.dob'), required: true %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :country, (t 'profiles.country') %>
        <%= display_country %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= form.label :address, (t 'profiles.address') %>
        <%= form.text_field :address, id: :profile_address, class: "form-control", placeholder: (t 'profiles.address'), required: true %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :city, (t 'profiles.city') %>
        <%= form.text_field :city, id: :profile_city, class: "form-control", placeholder: (t 'profiles.city'), required: true %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :postcode, (t 'profiles.postcode') %>
        <%= form.text_field :postcode, id: :profile_postcode, class: "form-control", placeholder: (t 'profiles.postcode'), required: true %>
      </div>
    </div>
  </div>
  <div class="row profile-kyc-form-btn">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="form-group">
        <div class="d-flex justify-content-between mt-4">
          <%= submit_tag  (t 'profiles.submit'), class: "btn btn-primary btn-block" %>
        </div>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
<% end %>
