<% content_for :guide do %>
  <div class="container">
    <% if account_signed_in? %>
      <%= render partial: 'layouts/shared/overview'%>
      <div class="row">
        <div class="flex-box horizontal profile-body">
          <%= render partial: 'layouts/shared/profile_siderbar_list'%>
          <div class="flex-content">
            <div class="profile-content">
              <div class="profile-security-head">
                <h4><%= (t 'profiles.profile') %></h4>
              </div>
              <div class="profile-kyc-form">
                <div class="profile-kyc-form-wrap">
                  <p>Your profiles have been received, and are currently being reviewed.</p>
                  <p><small>If you experience an unexpected interruption when uploading information during your application process, please <%= link_to ('try again'), new_profile_path %>.</small></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% else %>
      <h2><%= (t 'session.not_signed_in') %></h2>
      <br/>
      <%= link_to (t 'session.login'), new_account_session_path %> or <%= link_to (t 'session.register'), new_account_registration_path %>
    <% end %>
    </div>
<% end %>